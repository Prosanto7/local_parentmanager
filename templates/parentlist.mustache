{{!
    @template local_parentmanager/parentlist

    Parent list template.

    Context variables required for this template:
    * parents - Array of parent objects
    * hasparents - Boolean indicating if there are parents

    Example context (json):
    {
        "parents": [
            {
                "id": 1,
                "fullname": "John Doe",
                "email": "john@example.com",
                "childcount": 2,
                "lastaccess": "Monday, 1 January 2026, 12:00 PM",
                "profileurl": "http://example.com/user/profile.php?id=1"
            }
        ],
        "hasparents": true
    }
}}

<div class="parent-manager-container">
    {{#hasparents}}
    <div class="table-responsive">
        <table class="table table-striped generaltable">
            <thead>
                <tr>
                    <th scope="col">{{#str}}fullname, core{{/str}}</th>
                    <th scope="col">{{#str}}email, core{{/str}}</th>
                    <th scope="col">{{#str}}assignedchildren, local_parentmanager{{/str}}</th>
                    <th scope="col">{{#str}}lastaccess, core{{/str}}</th>
                    <th scope="col" class="text-center">{{#str}}actions, core{{/str}}</th>
                </tr>
            </thead>
            <tbody>
                {{#parents}}
                <tr>
                    <td>
                        <a href="{{profileurl}}" target="_blank">{{fullname}}</a>
                    </td>
                    <td>{{email}}</td>
                    <td>{{childcount}}</td>
                    <td>{{lastaccess}}</td>
                    <td class="text-center">
                        <div class="dropdown">
                            <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" 
                                    id="dropdownMenu{{id}}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="icon fa fa-cog fa-fw" aria-hidden="true"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu{{id}}">
                                <a class="dropdown-item" href="#" data-action="view-children" 
                                   data-parentid="{{id}}" data-parentname="{{fullname}}">
                                    <i class="icon fa fa-users fa-fw" aria-hidden="true"></i>
                                    {{#str}}viewchildren, local_parentmanager{{/str}}
                                </a>
                                <a class="dropdown-item" href="#" data-action="assign-child" 
                                   data-parentid="{{id}}" data-parentname="{{fullname}}">
                                    <i class="icon fa fa-user-plus fa-fw" aria-hidden="true"></i>
                                    {{#str}}assignchild, local_parentmanager{{/str}}
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-danger" href="#" data-action="remove-parent" 
                                   data-parentid="{{id}}" data-parentname="{{fullname}}">
                                    <i class="icon fa fa-trash fa-fw" aria-hidden="true"></i>
                                    {{#str}}removeparent, local_parentmanager{{/str}}
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
                {{/parents}}
            </tbody>
        </table>
    </div>
    {{/hasparents}}

    {{^hasparents}}
    <div class="alert alert-info">
        {{#str}}noparents, local_parentmanager{{/str}}
    </div>
    {{/hasparents}}
</div>
