<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/parentmanager/db" VERSION="20260121" COMMENT="XMLDB file for Parent Manager plugin"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_parentmanager_rel" COMMENT="Parent-child relationships">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="parentid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID of the parent user"/>
        <FIELD NAME="childid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID of the child user"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Time when relationship was created"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="parentid" TYPE="foreign" FIELDS="parentid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="childid" TYPE="foreign" FIELDS="childid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="parentid-childid" UNIQUE="true" FIELDS="parentid, childid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
